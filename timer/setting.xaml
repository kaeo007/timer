<Page x:Class="timer.setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:timer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="setting">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center"  TextAlignment="Center" Grid.Row="0" TextWrapping="Wrap" Text="풀려난 그림자" VerticalAlignment="Top" Width="120" Margin="0,39,0,0"/>
        <TextBlock HorizontalAlignment="Center"  TextAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="백귀야행 (칭호키)" VerticalAlignment="Center" Width="120"/>
        <TextBlock HorizontalAlignment="Center"  TextAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="백귀야행 (주력기)" VerticalAlignment="Center" Width="120"/>
        <TextBlock HorizontalAlignment="Center"  TextAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="신들의 황혼" VerticalAlignment="Center" Width="120"/>
        <TextBox x:Name ="setting_key1" PreviewKeyDown="TextBox_PreviewKeyDown" Grid.Column="1" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Margin="0,39,0,0" RenderTransformOrigin="0.515,0.587"/>
        <TextBox x:Name ="setting_key2_1" PreviewKeyDown="TextBox_PreviewKeyDown" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Center" Width="120" RenderTransformOrigin="0.526,1.945"/>
        <TextBox x:Name ="setting_key2_2" PreviewKeyDown="TextBox_PreviewKeyDown" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Margin="0,10,0,0"/>
        <TextBox x:Name ="setting_key2_3" PreviewKeyDown="TextBox_PreviewKeyDown" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Margin="0,62,0,0"/>
        <TextBox x:Name ="setting_key3" PreviewKeyDown="TextBox_PreviewKeyDown" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Center" Width="120"/>

        <Button Content="저장 후 메인화면" HorizontalAlignment="Left" Height="34" Margin="40,0,0,0" Grid.Row="4" VerticalAlignment="Center" Width="138" Click="Button_Click"/>
        <Button Content="초기화"  HorizontalAlignment="Center" Height="33" Grid.Row="4" VerticalAlignment="Center" Width="76" Click="Button_Reset" Grid.Column="1"/>





    </Grid>
</Page>
