<Page x:Class="timer.timer_start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:timer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="timer_start">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="2" Grid.Column="0" Content ="메인화면으로" Height="58"  VerticalAlignment="Center" Width="100" Click="Button_Click" Grid.ColumnSpan="2"/>
        <Button Grid.Row="2" Grid.Column="1" Content ="초기화" Height="58"  VerticalAlignment="Center" Width="100" Click="Button_Click2" Grid.ColumnSpan="2" />




        <TextBlock x:Name="title_timer1" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,59,0,0" Grid.Row="1" Grid.Column="0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="41" Width="106" FontSize="20"/>
        <TextBlock x:Name="title_timer2" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,59,0,0" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap"  VerticalAlignment="Top" Height="41" Width="106" FontSize="20"/>
        <TextBlock x:Name="title_timer3" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,59,0,0" Grid.Row="1" Grid.Column="2" TextWrapping="Wrap"  VerticalAlignment="Top" Height="41" Width="106" FontSize="20"/>
        <Image HorizontalAlignment="Left" Width="102" Margin="14,40,0,25" Source="/shadow.png"/>
        <Image HorizontalAlignment="Left" Width="102" Margin="14,40,0,26" Grid.Column="1" Source="/white.png"/>
        <Image  HorizontalAlignment="Left" Width="102" Margin="13,40,0,26" Grid.Column="2" Source="/god.png"/>

    </Grid>
</Page>
